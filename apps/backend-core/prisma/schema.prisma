generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Message {
  id         String   @id @default(uuid())
  externalId String   @unique // Identificador de Meta: Garantiza idempotencia a nivel DB
  content    String   // Contenido textual del mensaje
  sender     String   // Número de teléfono o identificador del remitente
  type       String   @default("text")
  timestamp  DateTime @default(now())
  direction  String   @default("outbound") // 'inbound' o 'outbound'
  tenantId   String
  Tenant     Tenant   @relation(fields: [tenantId], references: [id])
}

model Tenant {
  id        String    @id @default(uuid())
  name      String
  createdAt DateTime  @default(now())
  Message   Message[]
  User      User[]
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String   // Almacenada siempre con hash (Bcrypt)
  fullName  String?
  role      String   @default("user")
  createdAt DateTime @default(now())
  tenantId  String
  Tenant    Tenant   @relation(fields: [tenantId], references: [id])
}