generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Message {
  id        String   @id
  content   String
  sender    String
  type      String   @default("text")
  timestamp DateTime @default(now())
  direction String   @default("outbound")
  tenantId  String
  Tenant    Tenant   @relation(fields: [tenantId], references: [id])
}

model Tenant {
  id        String    @id
  name      String
  createdAt DateTime  @default(now())
  Message   Message[]
  User      User[]
}

model User {
  id        String   @id
  email     String   @unique
  password  String
  fullName  String?
  role      String   @default("user")
  createdAt DateTime @default(now())
  tenantId  String
  Tenant    Tenant   @relation(fields: [tenantId], references: [id])
}
