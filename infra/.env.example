# --- DATABASE (PostgreSQL) ---
POSTGRES_USER=synapse_admin
POSTGRES_PASSWORD=secure_password_placeholder
POSTGRES_DB=synapse_core
# Host interno para contenedores: 'postgres'. Host externo: 'localhost'
DB_HOST=postgres
DB_PORT=5432

# --- CACHE & QUEUES (Redis) ---
# Host interno para contenedores: 'redis'. Host externo: 'localhost'
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=secure_redis_password_placeholder

# --- AUTOMATION (n8n) ---
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=secure_n8n_password_placeholder
# Generar una clave segura aleatoria para esto. Si se pierde, se pierden las credenciales guardadas en n8n.
N8N_ENCRYPTION_KEY=secure_random_string_placeholder